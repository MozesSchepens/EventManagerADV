@model EventManagerADV.Models.Volunteer

<h1>Vrijwilliger verwijderen</h1>

<h3>Weet u zeker dat u deze vrijwilliger wilt verwijderen?</h3>
<div>
    <h4>Vrijwilliger</h4>
    <dl class="row">
        <dt class="col-sm-2">Naam</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
